                <th>Horário</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ComentariosArea)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.user.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horario)
                </td>
            </tr>

            }

        </tbody>
