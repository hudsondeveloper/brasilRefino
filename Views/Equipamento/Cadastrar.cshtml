
@{
    var idArea = Session["idArea"];
    ViewBag.titulo = "Cadastrar Equipamento";
}



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>  <small>  </small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form id="" data-parsley-validate class="form-horizontal form-label-left" action="@Url.Action("Cadastrar","Equipamento",new { area = idArea})" method="post">

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="area">
                            Área <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <select class="form-control" name="area" id="area" required>

                                <option value="" selected>SELECIONE</option>
                                @{

                                    foreach (var area in ViewBag.area)
                                    {
                                        <option value="@area.Id">@area.nome</option>
                                    }
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3" for="tag">
                            Tag <span class="required">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="tag" name="tag" required="required" class="form-control col-md-4 col-xs-4">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3" for="descricao_equipamento">
                            Descricao do equipamento <span class="required">*</span>
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="descricao_equipamento" name="descricao_equipamento" required="required" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="situacao">
                            Situacao <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <select class="form-control" name="situacao" id="situacao" required>
                                <option value="" selected>SELECIONE</option>
                                <option value="ATIVO">ATIVO</option>
                                <option value="FORA_DE_OPERACAO">FORA DE OPERAÇÂO</option>
                                <option value="EM_MONTAGEM">EM_MONTAGEM</option>
                                <option value="DESATIVADA">DESATIVADA</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="status_Doc">
                            Status do Doc <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <select class="form-control" name="status_Doc" id="status_Doc" required>
                                <option value="" selected>SELECIONE</option>
                                <option value="ATUALIZADO">ATUALIZADO</option>
                                <option value="PENDENTE">PENDENTE</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Descrição</label>
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <textarea id="descricao" name="descricao" class="resizable_textarea form-control" placeholder="Descrição..." required></textarea>
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <button class="btn btn-primary" type="reset">Reset</button>
                            <button type="submit" class="btn btn-success">Cadastrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
