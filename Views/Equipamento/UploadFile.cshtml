                    <a href="@Url.Action("Download","Equipamento" , new { ImageName = item, id = @Session["idequip"], idarea = @Session["areaid"] })" style="box-shadow:none;font-size: 25px;"><i class="fa fa-download" title="download"></i></a>
                </td>
            </tr>

            }

        </tbody>
        <tfoot>

        </tfoot>
    </table>
</div>

