<form action="@Url.Action("UploadFile", "Equipamento", new { id = @Session["idequip"], idarea = @Session["areaid"] })" enctype="multipart/form-data" method="post" style="display:grid;margin-bottom:2%;">
    <div class="form-group">

        <div>
            @Html.TextBox("file", "", new { type = "file", style = "color: #6aba8e;" }) <br />
       

            <input type="submit" value="Upload" />

            @ViewBag.Message

        </div>
        @*<input type="submit" value="Pesquisar" class="col-md-3 col-sm-3 col-xs-3 " />*@
    </div>
</form>


<div>

    @model List<string>

